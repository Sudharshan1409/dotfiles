[init]
	defaultBranch = main
; user config
[user]
	email = sudarshan61kv@gmail.com
	name = Sudharshan V
    signingkey = sudarshan61kv@gmail.com
[commit]
    gpgsign = true
[tag]
    gpgSign = true
[alias]
    remotes = remote -v
    branches = branch -a
    tags = tag -l
[pull]
    rebase = false
[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    side-by-side = true


    # delta detects terminal colors automatically; set one of these to disable auto-detection
    # dark = true
    # light = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
